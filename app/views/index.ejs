<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Affordable car rental services with a wide range of vehicles. Rent a Mini, Sedan, or SUV with XYZ Car Rental." />
    <link rel="stylesheet" href="../css/index.css" />
    <title>XYZ Car Rental Services</title>
</head>
<body>

    <header>
        <h1>XYZ Car Rental Services</h1>
        <h2>Ease & Comfort @ Affordable Prices</h2>
    
    
    <nav>
        <ul>
            <li><a href="/about">ABOUT US</a></li>
            <li><a href="#contact">CONTACTS</a></li>
            <li><a href="/admin/login">ADMIN</a></li>
        </ul>
    </nav>

    </header>
   

    <main>
        <section class="banner">
            <div class="banner-img">
                <img src="../images/banner.jpg" alt="Luxury cars available for rent" />
            </div>
        </section>

        <section class="cars">
            <div class="car-card">
                <img src="../images/car1.jpg" alt="Mini car available for rent" />
                <h3>Mini</h3>
                <p>Price per day: ₹ 3,300</p>
                <button class="book-btn" data-vehicle="Mini">Rent Now</button>
            </div>

            <div class="car-card">
                <img src="../images/car2.jpg" alt="Sedan car available for rent" />
                <h3>Sedan</h3>
                <p>Price per day: ₹ 4,300</p>
                <button class="book-btn" data-vehicle="Sedan">Rent Now</button>
            </div>

            <div class="car-card">
                <img src="../images/car3.jpg" alt="SUV available for rent" />
                <h3>SUV</h3>
                <p>Price per day: ₹ 6,300</p>
                <button class="book-btn" data-vehicle="SUV">Rent Now</button>
            </div>
        </section>

        <div class="info">
        <section class="contact" id="contact">
            <h2>Contacts</h2>
            <p>Email us: <a href="mailto:cc@xyzcarrental.us">cc@xyzcarrental.us</a></p>
            <p>Call us: <a href="tel:112233">112233</a></p>
        </section>

        <section class="address">
            <h2>Adress</h2>
            <p>XYZ</p>
        </section>
        </div>

    </main>

    <footer>
        <p>&copy; 2023 XYZ Car Rental Service. All rights reserved.</p>
    </footer>

    <!-- Booking Modal -->
    <div id="booking-modal" class="modal">
        <div class="modal-content">
            <span class="close-button">&times;</span>
            <h2>Book Your Car</h2>
            <form id="booking-form" method="POST" action="/book-mini">
                <input type="hidden" id="vehicle" name="vehicle" value="Mini">
                <label for="name">Full Name</label>
                <input type="text" id="name" name="name" required>

                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>

                <label for="phone">Phone</label>
                <input type="text" id="phone" name="phone" required>

                <label for="address">Address</label>
                <input type="text" id="address" name="address" required>

                <label for="days">Number of Days</label>
                <input type="number" id="days" name="days" required>

                <button type="submit">Confirm Booking</button>
            </form>
        </div>
    </div>

    <script>
        const modal = document.getElementById("booking-modal");
        const closeBtn = document.querySelector(".close-button");
        const bookButtons = document.querySelectorAll(".book-btn");
        const vehicleInput = document.getElementById("vehicle");
        const bookingForm = document.getElementById("booking-form");

        bookButtons.forEach(btn => {
            btn.addEventListener("click", () => {
                const vehicle = btn.dataset.vehicle;
                vehicleInput.value = vehicle;
                bookingForm.action = "/book-" + vehicle.toLowerCase();
                modal.style.display = "block";
            });
        });

        closeBtn.onclick = () => {
            modal.style.display = "none";
        };

        window.onclick = event => {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        };
    </script>

<script>
  // Show popup if ?success=true is in URL
  if (window.location.search.includes('success=true')) {
    alert('Booking request submitted!');
  }
</script>

</body>
</html>
